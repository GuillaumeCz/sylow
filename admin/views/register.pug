extends includes/base.pug

block content
  div(id="sy-narrow-form" class="ui middle aligned center aligned grid")
    div(class="column")
      img(class="sy-logo" src="/assets/logo-white.svg")
      h1= "Register"
      form(method="POST")
        div(class="ui top attached left aligned segment")
          div(class="ui form")
            // input(type="hidden" name="passwordHash")
            if messages.error
              div(class="ui negative message")
                p= messages.error
            div(class="field")
              input(type="text" name="username" placeholder="Username")
            div(class="field")
              input(type="password" name="passwordHash" placeholder="Password")
            div(class="field")
              input(type="password" placeholder="Confirm Password")
        button(type="submit" class="ui bottom attached fluid positive button") Register
